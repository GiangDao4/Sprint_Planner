{
  "name": "trellodemo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write .",
    "lint": "npm run lint --workspace=frontend && npm run lint --workspace=backend",
    "start:all": "concurrently \"npm run start --workspace=frontend\" \"npm run start --workspace=backend\"",
    "commitlint": "commitlint --edit"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^14.0.1",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.2"
  },
  "lint-staged": {
    "frontend/src/**/*.{ts,tsx,js,jsx}": [
      "eslint --config frontend/src/eslint.config.js --fix"
    ],
    "backend/src/**/*.{ts,tsx,js,jsx}": [
      "eslint --config backend/src/eslint.config.js --fix"
    ]
  }
}
