
FROM node:20-alpine AS build

WORKDIR /app


COPY package*.json ./
RUN npm install


COPY . .

RUN npm run build


FROM node:20-alpine

WORKDIR /app

RUN npm install -g vite

COPY --from=build /app/dist ./dist

EXPOSE 5001
CMD ["vite", "preview", "--host", "--port", "5001"]


