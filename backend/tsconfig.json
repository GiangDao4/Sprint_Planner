{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "src",
        "src/eslint.config.js"
    ]
}